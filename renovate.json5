{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    ':gitSignOff',
  ],
  automergeStrategy: 'squash',
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^Dockerfile$/',
      ],
      matchStrings: [
        'ARG\\sEASYEPG_LITE_SHA="(?<currentDigest>.*?)"\\n',
      ],
      currentValueTemplate: 'main',
      depNameTemplate: 'easyepg-lite',
      packageNameTemplate: 'https://github.com/sunsettrack4/script.service.easyepg-lite',
      datasourceTemplate: 'git-refs',
    },
  ],
  "packageRules": [
    {
     "matchFileNames": [".github/**"],
     "automerge": true,
    },
    {
      "matchFileNames": ["Dockerfile"],
      "groupName": "Docker Dependencies",
    },
  ],
}
